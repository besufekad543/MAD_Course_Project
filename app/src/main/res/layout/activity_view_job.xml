<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    android:fillViewport="true"
    tools:context=".ViewJob">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_header"
        android:layout_alignParentTop="true"
        android:background="@color/background_header"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/square_logo"
            android:layout_height="@dimen/square_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/logopolito" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="@dimen/margin_header"
            android:text="@string/header"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomTab"
        android:layout_below="@+id/header"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jobPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_title"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/job_position"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobPosition"
                android:layout_marginTop="@dimen/margin_top_title"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/companyIndustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyName"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/industry"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/datePosted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyIndustry"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/date_posted"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/jobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datePosted"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/description"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobDescription"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/salary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/jobLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salary"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/jobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobLocation"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/job_type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/jobDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobType"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/job_duration"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TableRow
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobDuration"
                android:layout_marginTop="@dimen/margin_top_title"

                >

                <Button
                    android:id="@+id/applyButton"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="@dimen/margin_between"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:onClick=""
                    android:text="@string/apply_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="@dimen/margin_between"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:onClick=""
                    android:text="@string/save_job_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </TableRow>

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/table"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_top"
                android:background="@drawable/rounded_button"
                android:onClick=""
                android:text="@string/back_button"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomTab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_tab"
        android:gravity="center_vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginBottom="@dimen/margin_tab"
            android:layout_marginTop="@dimen/margin_tab"
            android:layout_weight="1.0"
            android:background="@color/background_bottom"
            android:text="@string/home_button"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginBottom="@dimen/margin_tab"
            android:layout_marginTop="@dimen/margin_tab"
            android:layout_weight="1.0"
            android:background="@color/background_bottom"
            android:text="@string/profile_button"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>