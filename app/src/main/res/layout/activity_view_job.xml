<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_layout"
    tools:context=".ViewJob">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_header"
        android:background="@color/background_header"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">


        <ImageView android:layout_width="@dimen/square_logo"
            android:layout_height="@dimen/square_logo"
            android:layout_gravity="center_vertical"
            android:background="@drawable/logopolito"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_header"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_below="@+id/header"
        android:layout_above="@+id/bottomTab"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="@string/job_position"
                android:id="@+id/jobPosition"
                android:layout_marginTop="@dimen/margin_top_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/name"
                android:id="@+id/companyName"
                android:layout_marginTop="@dimen/margin_top_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/jobPosition"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/industry"
                android:id="@+id/companyIndustry"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/companyName"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/date_posted"
                android:id="@+id/datePosted"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/companyIndustry"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/description"
                android:id="@+id/jobDescription"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/datePosted"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/salary"
                android:id="@+id/salary"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/jobDescription"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/location"
                android:id="@+id/jobLocation"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/salary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/job_type"
                android:id="@+id/jobType"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/jobLocation"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <TextView android:text="@string/job_duration"
                android:id="@+id/jobDuration"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"

                android:paddingLeft="@dimen/padding_left"
                android:layout_below="@+id/jobType"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <Button
                android:text="@string/apply_button"
                android:id="@+id/applyButton"
                android:layout_marginTop="@dimen/margin_top_title"
                android:layout_below="@+id/jobDuration"
                android:layout_width="@dimen/width_buttons"
                android:layout_height="@dimen/button_height"
                android:layout_centerHorizontal="true"
                android:onClick=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                />
            <Button
                android:text="@string/save_job_button"
                android:id="@+id/saveButton"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_below="@+id/applyButton"
                android:layout_width="@dimen/width_buttons"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_centerHorizontal="true"
                android:onClick=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                />

            <Button
                android:text="@string/back_button"
                android:id="@+id/backButton"
                android:layout_width="@dimen/width_buttons"
                android:layout_height="@dimen/button_height"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/saveButton"
                android:layout_margin="@dimen/margin_top"
                android:onClick=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomTab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_tab"
        android:gravity="center_vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="@dimen/margin_tab"
            android:layout_marginBottom="@dimen/margin_tab"
            android:text="@string/home_button"
            android:background="@color/background_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="@dimen/margin_tab"
            android:layout_marginBottom="@dimen/margin_tab"
            android:text="@string/profile_button"
            android:background="@color/background_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>